.Guigui

  .toggler
    height 24px
    cursor pointer
    user-select none

    .label
      font-size 0.8em
      line-height 24px
      height 100%
      width calc(29.5% - 10px)
      float left

    .state
      position relative
      background shadowColor
      height 100%
      width 24px
      float left
      border-radius 3px
      margin 0 0 0 10px
      box-shadow 0px 2px 1px rgba(255, 255, 255, 0.05)

    .handle
      position absolute
      background highlightColor
      width 50%
      height 50%
      top 25%
      left 25%
      border-radius 3px
      display none

    &.on
      .handle
        display block
